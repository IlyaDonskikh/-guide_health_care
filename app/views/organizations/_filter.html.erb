<%= content_tag :div, class: 'organizations-index-filter' do %>
  <%= form_tag organizations_path, method: :get do %>
    <%= content_tag :div, class: 'organizations-index-filter__item' do %>
      <%= content_tag :div, t('.address'), class: 'organizations-index-filter__item__label' %>
      <%= content_tag :div, class: 'organizations-index-filter__item__field' do %>
        <%= hidden_field_tag :address %>
        <%= content_tag :div, class: 'organizations-index-filter__item__field__input' do %>
          <%= link_to t('.address_select'), '#', class: 'organizations-index-filter__item__field__input__link' %>
        <% end %>
        <%= content_tag :div, t('.address_hint'), class: 'organizations-index-filter__item__field__hint' %>
      <% end %>
    <% end %>
    <%= content_tag :div, class: 'organizations-index-filter__item' do %>
      <%= content_tag :div, t('.illness'), class: 'organizations-index-filter__item__label' %>
      <%= content_tag :div, class: 'organizations-index-filter__item__field' do %>
        <%= hidden_field_tag :illness %>
        <%= content_tag :div, class: 'organizations-index-filter__item__field__input' do %>
          <%= link_to t('.illness_select'), '#', class: 'organizations-index-filter__item__field__input__link' %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>