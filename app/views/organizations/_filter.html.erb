<%= content_tag :div, class: 'filter' do %>
  <%= form_tag organizations_path, method: :get do %>
    <%= content_tag :div, class: 'filter__field' do %>
      <%= content_tag :div, t('.address'), class: 'filter__field__label' %>
      <%= content_tag :div, class: 'filter__field__input' do %>
        <%= hidden_field_tag :address %>
        <%= content_tag :div, class: 'filter__field__input__block filter__field__input__block_address' do %>
          <%= link_to t('.address_select'), '#', class: 'filter__field__input__block__link' %>
        <% end %>
        <%= content_tag :div, t('.address_hint'), class: 'filter__field__input__hint' %>
      <% end %>
    <% end %>
    <%= content_tag :div, class: 'filter__field' do %>
      <%= content_tag :div, t('.illness'), class: 'filter__field__label' %>
      <%= content_tag :div, class: 'filter__field__input' do %>
        <%= content_tag :div, class: 'filter__field__input__block filter__field__input__block_illness' do %>
          <%= hidden_field_tag :illness %>
          <%= link_to t('.illness_select'), '#', class: 'filter__field__input__block__link' %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>