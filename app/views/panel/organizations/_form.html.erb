<%= bootstrap_nested_form_for([:panel, @organization]) do |f| %>
  <%= f.text_field :name %>
  <%= f.text_field :address %>
  <%= f.text_area :description %>

  <%= content_tag :h2, t('.age_ranges') %>
  <%= f.fields_for :organization_ages do |age_range| %>
    <%= content_tag :div, class: 'form-inline' do %>
      <%= age_range.text_field :min %>
      <%= age_range.text_field :max %>
      <%= age_range.link_to_remove t('.remove_age_range'), class: 'btn btn-sm btn-danger' %>
    <% end %>
  <% end %>
  <%= content_tag :p do %>
    <%= f.link_to_add t('.add_age_range'), :organization_ages, class: 'btn btn-sm btn-primary' %>
  <% end %>

  <%= content_tag :h2, t('.illnesses') %>
  <%= f.fields_for :organization_illnesses do |illness| %>
    <%= content_tag :div, class: 'form-inline' do %>
      <%= illness.collection_select :illness_id, @illnesses, :id, :name, hide_label: true %>
      <%= illness.link_to_remove t('.remove_illness'), class: 'btn btn-sm btn-danger' %>
    <% end %>
  <% end %>
  <%= content_tag :p do %>
    <%= f.link_to_add t('.add_illness'), :organization_illnesses, class: 'btn btn-sm btn-primary' %>
  <% end %>

  <%= content_tag :p do %>
    <%= f.submit %>
  <% end %>
<% end %>