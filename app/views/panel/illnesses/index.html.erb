<%= page_header t('.title') %>
<%= link_to t('.create'), new_panel_illness_path, class: 'btn btn-primary' %>
<%= content_tag :table, class: 'table table-striped' do %>
  <%= content_tag :thead do %>
    <%= content_tag :tr do %>
      <%= content_tag :th, t('.name') %>
      <%= content_tag :th, t('.description') %>
      <%= content_tag :th %>
    <% end %>
  <% end %>
  <%= content_tag :tbody do %>
    <% @illnesses.each do |illness| %>
      <%= content_tag :tr do %>
        <%= content_tag :td, illness.name %>
        <%= content_tag :td, illness.description %>
        <%= content_tag :td do %>
          <%= link_to t('.edit'), edit_panel_illness_path(illness), class: 'btn btn-xs btn-default' %>
          <%= link_to t('.destroy'), panel_illness_path(illness), method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: t('.destroy_confirm')} %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
<%= paginate @illnesses %>